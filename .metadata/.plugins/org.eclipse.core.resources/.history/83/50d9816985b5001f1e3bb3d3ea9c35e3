	public void practice7() {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수 : ");
		int num = sc.nextInt();
		//사용자가 배열의 길이를 직접 입력
		
		int[] arr = new int[num];
		//사용자가 배열의 길이를 직접 입력
		
		
		for(int i=0; i<num; i++) {
			int value = sc.nextInt();
			arr[i] = value;
			System.out.print("배열 " + i + "번째 인덱스에 넣을 값 : " );
		// 배열의 크기만큼 직접 값을 반복해서 입력(초기화)
		}
		
		int sum = 0;
		
		for(int i=0; i<num; i++) {
			sum += arr[i];
		}
		System.out.println("총 합 : " + sum);
			
		
		
	}
	

					System.out.println('수');
				}
			}
			
		}
		*/		
		/*
		if(num % 2 == 1 && num > 0) {
			for(int i=1; i<=num; i += 2) {
				System.out.print("박");
			}
		}else if(num % 2 == 0 && num > 0) {
			for(int i=1; i<=num; i++) {
				System.out.print("수");
			}
		}else
			System.out.println("양수가 아닙니다.");
		*/
		
		/*
		for(int i=1; i<=num; i++) {
			if(num % 2 == 1 && num > 0) {
				System.out.print("박");
			}
			for(int j=1; j<=num; j++) {
				if(num % 2 == 0 && num > 0) {
					System.out.print("수");
				}
			}
			if(num < 0) {
				System.out.println("양수가 아닙니다.");
			}
		}
		*/
	}
	
	public void practice2() {

		Scanner sc = new Scanner(System.in);

		while (true) {
			System.out.print("정수 : ");
			int num = sc.nextInt();

			if (num > 0) {

				for (int i = 1; i <= num; i++) {
					if (i % 2 == 1) {
						System.out.print('박');
					} else if (i % 2 == 0) {
						System.out.print('수');
					}
				}
				break;

			} else {
				System.out.println("양수가 아닙니다.");
			}
		}

	}
		
	
	

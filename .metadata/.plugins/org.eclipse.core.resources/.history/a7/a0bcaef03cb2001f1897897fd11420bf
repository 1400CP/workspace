	public void practice1() {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수 : ");
		int num = sc.nextInt();
		
		if(num > 0) {
			for(int i=1; i<=num; i++) {
				if(i % 2 == 1) {
					System.out.print('박');
				}else if(i % 2 == 0) {
					System.out.print('수');
				}else
					System.out.println();
			}
			
		}else
			System.out.println("양수가 아닙니다.");
		/*
		for(int i=1; i<=num; i++) {
			if(num % 2 == 1) {
				System.out.println('박');
